  <script>
    document.querySelectorAll('.sentence-container').forEach(container => {
      container.addEventListener('click', () => {
        if (speechSynthesis.speaking) {
          speechSynthesis.cancel();
        }

        const englishDiv = container.querySelector('.english');
        const sentenceText = container.getAttribute('data-text');
        const words = englishDiv.querySelectorAll('.word');
        const wordCount = words.length;

        const utterance = new SpeechSynthesisUtterance(sentenceText);
        utterance.rate = 0.3;

        let wordIndex = 0;
        const totalDuration = (sentenceText.length / 5) * (1 / 0.3) * 1000; // 粗估語音總時長（每5個字符1秒，調整rate）
        const intervalTime = totalDuration / wordCount; // 每個單字的高亮時間

        const highlightInterval = setInterval(() => {
          words.forEach((span, i) => {
            span.style.color = i === wordIndex ? "red" : "black";
          });
          wordIndex++;
          if (wordIndex >= wordCount) {
            clearInterval(highlightInterval);
          }
        }, intervalTime);

        utterance.onend = () => {
          clearInterval(highlightInterval);
          words.forEach(span => {
            span.style.color = "black";
          });
        };

        speechSynthesis.speak(utterance);
      });
    });
  </script>
</body>
</html>
