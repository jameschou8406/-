    <script>\
        function speakSentence(element) \{\
            const text = element.querySelector('.en').textContent;\
            const words = text.split(' ');\
\
            const utterance = new SpeechSynthesisUtterance(text);\
            utterance.lang = 'en-US';\
            utterance.rate = 0.9; // \uc0\u35486 \u36895 \u65288 0.5 ~ 2.0\u65289 \
\
            let currentIndex = 0;\
            utterance.onboundary = function(event) \{\
                if (event.name === 'word') \{\
                    highlightWord(element, words, currentIndex);\
                    currentIndex++;\
                \}\
            \};\
\
            speechSynthesis.speak(utterance);\
        \}\
\
        function highlightWord(element, words, index) \{\
            const span = element.querySelector('.en');\
            if (index < words.length) \{\
                span.innerHTML = words.map((word, i) =>\
                    i === index ? `<span class="highlight">$\{word\}</span>` : word\
                ).join(' ');\
            \}\
        \}\
